<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyThirteenthApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
         <item name="colorPrimary">@color/black</item>
    </style>

    <style name="Theme.MyThirteenthApp" parent="Base.Theme.MyThirteenthApp" />

    <!--    Dark mode styling start -->
    <style name="Toolbar">
        <item name="android:backgroundTint">@color/light_gray_100</item>
    </style>
    <style name="Screen">
        <item name="android:background">@color/dark_gray</item>
    </style>
    <style name="Text">
        <item name="android:textColor">@color/white</item>

    </style>
    <style name="Button">
        <item name="android:background">@color/light_gray</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="BottomNavigation">
        <item name="android:background">@drawable/bottom_navigation_dark</item>
    </style>
    <!--    Dark mode styling end -->

</resources>